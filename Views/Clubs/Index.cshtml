@model IEnumerable<Lab1_IsTp__2.Club>

@{
    ViewData["Title"] = "Clubs";
}

<h1>Clubs of @ViewBag.CupName</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlayersNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrophiesNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PositionInLeague)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cup)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EuroCup)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.League)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.National)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlayersNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrophiesNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PositionInLeague)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cup.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EuroCup.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.League.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.National.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
